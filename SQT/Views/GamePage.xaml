<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:SleepingQueensTogether.Models"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    Title="GamePage"
    x:DataType="vm:GamePageVM">
    <Grid>
        <Image Aspect="AspectFill" Source="sleepingqueens.jpg" />
        <Grid ColumnDefinitions="*" RowDefinitions="0.4*, *, 0.6*">
            <Grid ColumnDefinitions="*" RowDefinitions="*, *">
                <Label
                    Grid.RowSpan="2"
                    FontAttributes="Bold"
                    FontSize="13"
                    HorizontalOptions="Start"
                    Text="{Binding Total}" />
                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    HeightRequest="30"
                    Text="{Binding OpponentName}" />
                <Label
                    Grid.Column="2"
                    Grid.ColumnSpan="6"
                    FontAttributes="Bold"
                    FontSize="10"
                    HeightRequest="30"
                    HorizontalOptions="End"
                    Text="{Binding Timeleft}" />
                <StackLayout
                    Grid.Row="2"
                    Margin="17,0,0,0"
                    IsVisible="{Binding GameStarted}"
                    Orientation="Horizontal"
                    Spacing="5">
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="100"
                        HorizontalOptions="Start"
                        Source="orangecard.png"
                        WidthRequest="70" />
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="100"
                        HorizontalOptions="Start"
                        Source="orangecard.png"
                        WidthRequest="70" />
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="100"
                        HorizontalOptions="Start"
                        Source="orangecard.png"
                        WidthRequest="70" />
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="100"
                        HorizontalOptions="Start"
                        Source="orangecard.png"
                        WidthRequest="70" />
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="100"
                        Source="orangecard.png"
                        WidthRequest="70" />
                </StackLayout>
            </Grid>
            <Grid
                Grid.Row="1"
                ColumnDefinitions="*,*,*,*,*,*, *"
                RowDefinitions="*,*,*,*, *, *">
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    Command="{Binding ThrowSelectedCardCommand}"
                    FontSize="18"
                    HeightRequest="50"
                    IsVisible="{Binding GameStarted}"
                    Text="{x:Static m:Strings.ThrowCards}"
                    WidthRequest="140" />
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    Command="{Binding StartGameCommand}"
                    FontSize="18"
                    HeightRequest="50"
                    IsVisible="{Binding CanStartGame}"
                    Text="{x:Static m:Strings.StartGame}"
                    WidthRequest="140" />
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    Command="{Binding ChangeTurnCommand}"
                    FontSize="18"
                    HeightRequest="50"
                    Text="{x:Static m:Strings.StartGame}"
                    WidthRequest="140" />
                <!--<ImageButton
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,40,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[0]}" />
                <ImageButton
                    Grid.Row="1"
                    Margin="10,40,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[1]}" />
                <ImageButton
                    Grid.Row="1"
                    Grid.Column="6"
                    Margin="0,40,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[6]}" />
                <ImageButton
                    Grid.Row="1"
                    Grid.Column="5"
                    Margin="0,40,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[7]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10,60,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[2]}" />
                <ImageButton
                    Grid.Row="2"
                    Margin="10,60,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[3]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="6"
                    Margin="0,60,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[8]}" />
                <ImageButton
                    Grid.Row="2"
                    Grid.Column="5"
                    Margin="0,60,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[9]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,80,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[4]}" />
                <ImageButton
                    Grid.Row="3"
                    Margin="10,80,0,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[5]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="6"
                    Margin="0,80,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[10]}" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="5"
                    Margin="0,80,10,0"
                    Aspect="AspectFit"
                    HeightRequest="70"
                    Source="{Binding QueenCardImages[11]}" />-->

            </Grid>
            <ScrollView
                x:Name="scrlMyCards"
                Grid.Row="2"
                Margin="0,0,0,30"
                Orientation="Horizontal">
                <StackLayout
                    x:Name="stkMyCards"
                    Orientation="Horizontal"
                    Spacing="5" />
            </ScrollView>
            <Label
                Grid.Row="2"
                FontAttributes="Bold"
                FontSize="20"
                HeightRequest="30"
                HorizontalOptions="Center"
                Text="{Binding MyName}"
                VerticalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>