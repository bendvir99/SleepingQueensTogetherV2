<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SleepingQueensTogether.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:SleepingQueensTogether.Models"
    xmlns:v="clr-namespace:SleepingQueensTogether.Views"
    xmlns:vm="clr-namespace:SleepingQueensTogether.ViewModels"
    Title="MainPage"
    x:DataType="vm:MainPageVM">
    <Grid>
        <Image Aspect="AspectFill" Source="sleepingqueens.jpg" />

        <Grid RowDefinitions="Auto, Auto, Auto">
            <Label
                Margin="25,50,0,0"
                FontFamily="ArchivoBlack-Regular"
                FontSize="40"
                Text="{x:Static m:Strings.MainTitle}"
                TextColor="White">
                <Label.Shadow>
                    <Shadow
                        Brush="Black"
                        Radius="5"
                        Offset="0,0" />
                </Label.Shadow>
            </Label>
            <Button
                Grid.Row="1"
                Margin="0,100,0,0"
                Command="{Binding PlayCommand}"
                Text="{x:Static m:Strings.Play}"
                WidthRequest="200" />
            <Button
                Grid.Row="2"
                Command="{Binding RulesCommand}"
                Text="{x:Static m:Strings.Rules}"
                WidthRequest="200" />
        </Grid>
    </Grid>
</ContentPage>
